#Question 1

def SumSeries(n):
    if n < 1:
        return 0 
    else:
        return n + SumSeries(n-2)
    
    
print(SumSeries(6))
print(SumSeries(10))

#Question 2

def SumIntegers(n):
    if n == 0:
        return 0
    else:
        return n % 10 + SumIntegers(int(n/10))
#Good Work
        
print(SumIntegers(345))
print(SumIntegers(45))
